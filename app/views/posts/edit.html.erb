<div class="main main-post">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">投稿編集</h2>

      <%= form_with model: @post, local: true do |f|%> 

      <%= render 'shared/error_messages', model: f.object %>
      
        <div class="image-field">
          <%= f.label :image, "画像" %><br />
          <%= f.file_field :image, class: :image_form, id:"prototype_image" %>
        </div>

        <div class="form-new-field">
          <%= f.label :text, "投稿文" %><br />
          <%= f.text_area :text, class: :form_new_text, id:"prototype_catch_copy" %>
        </div>      
        
        <div class="actions">
          <%= f.submit "変更する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>